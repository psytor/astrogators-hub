FROM node:25-alpine

WORKDIR /app

# Copy package files for dependency installation
COPY package*.json ./

# Install git to fetch dependencies from GitHub
RUN apk add --no-cache git

# Upgrade npm to the latest version
RUN npm install -g npm@latest

# Install dependencies (package is now public, no auth needed)
RUN npm install

# Source code will be mounted as a volume from docker-compose.yml
# This allows hot reload without rebuilding the container

# Expose Vite dev server port
EXPOSE 5173

# Command is specified in docker-compose.yml
# Will run: npm run dev -- --host 0.0.0.0
